<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NoodleCV.App.Views.ParameterView">

    <StackPanel Spacing="5" Margin="10">
        <Label Content="Selected Node Name" FontWeight="SemiBold" FontSize="24" />
        <Label Content="Label1" />
        <ComboBox HorizontalAlignment="Stretch">
            <ComboBoxItem Content="test" />
            <ComboBoxItem Content="test2" />
        </ComboBox>
        <Label Content="Label2" />
        <Grid>
            <Grid.ColumnDefinitions>*,100</Grid.ColumnDefinitions>
            <Slider x:Name="slider" HorizontalAlignment="Stretch" TickFrequency="10" TickPlacement="Outside"
                    IsSnapToTickEnabled="True" />
            <TextBox Grid.Column="1" Text="{Binding #slider.Value}" Width="20" />
        </Grid>

        <Label Content="Label3" />
        <TextBox />
    </StackPanel>
</UserControl>